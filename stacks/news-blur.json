{
  "name": "nb",
  "_inputs": [ "sys-log", "auth-log", "chef-log" ],

  "components": {
    "ops-auto": [ "zenoss", "logstash-combined" ]
  },

  "resources": {
    "slb": {
      "max": 1,
      "min": 1,
      "chef": {
        "run_list": [ "role[news_blur_slb]" ]
      }
    },

    "app": {
      "max": 1,
      "min": 1,
      "chef": {
        "run_list": [ "role[news_blur_app]" ]
      }
    },

    "mysql": {
      "max": 1,
      "min": 1,
      "chef": {
        "run_list": [ "role[news_blur_mysql]" ]
      }
    },

    "mongo_read_slave": {
      "max": 1,
      "min": 1,
      "chef": {
        "run_list": [ "role[news_blur_mongo_read_slave]" ]
      }
    },

    "mongo_write_master": {
      "max": 1,
      "min": 1,
      "chef": {
        "run_list": [ "role[news_blur_mongo_write_master]" ]
      }
    }
  }
}
