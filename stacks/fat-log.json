{
  "name": "fat",

  "_inputs": [ "syslog", "authlog", "chef-log" ],

  "components": {
    "ops-auto": [ "zenoss" ]
  },

  "resources": {
    "input": {
      "max": 1,
      "min": 1,
      "chef": {
        "tags": [ "fat-log" ],
        "run_list": [ "role[fat-log_input]", "role[logstash_kibana]" ]
      },
      "flavor_id": 103
    },

    "es-master": {
      "max": 1,
      "min": 1,
      "chef": {
        "tags": [ "fat-log" ],
        "run_list": [ "role[fat-log_elasticsearch]", "role[logstash_elasticsearch_master]" ]
      },
      "flavor_id": 102
    },

    "es-data": {
      "max": 3,
      "min": 3,
      "chef": {
        "tags": [ "fat-log" ],
        "run_list": [ "role[fat-log_elasticsearch]", "role[logstash_elasticsearch_data]" ]
      },
      "flavor_id": 104
    },

    "kibana": {
      "max": 0,
      "min": 0,
      "chef": {
        "tags": [ "fat-log" ],
        "run_list": [ "role[logstash_kibana]" ]
      },
      "flavor_id": 102
    }
  }
}
